<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>CookieApp2-HttpCookieBasics</display-name>
  <servlet>
    <servlet-name>ck1</servlet-name>
    <servlet-class>com.nt.servlet.SetCookiesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ck1</servlet-name>
    <url-pattern>/firsturl</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>ck2</servlet-name>
    <servlet-class>com.nt.servlet.ShowCookiesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ck2</servlet-name>
    <url-pattern>/secondurl</url-pattern>
  </servlet-mapping>
  
  
</web-app>